{
  "private": true,
  "scripts": {
    "dist": "build",
    "eslint": "eslint",
    "pack": "build --dir",
    "postinstall": "install-app-deps",
    "start": "electron ./app --profile=development --no-auto-updater --developer-tools",
    "test": "mocha"
  },
  "build": {
    "appId": "com.electron.soundcleod",
    "extraResources": [
      "dsa_pub.pem",
      "Credits.rtf"
    ],
    "mac": {
      "extend-info": "Info.plist"
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 345,
          "y": 153,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 95,
          "y": 153,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [ "squirrel" ]
    },
    "squirrelWindows": {
      "iconUrl": "https://soundcleod.com/favicon.ico"
    }
  },
  "devDependencies": {
    "electron": "^1.4.7",
    "electron-builder": "8.2.0",
    "eslint": "^3.5.0",
    "mocha": "^3.1.2",
    "spectron": "^3.4.0",
    "svg2png": "^1.0.0",
    "tmp": "0.0.29",
    "to-ico": "^1.1.3"
  }
}
