{
  "private": true,
  "scripts": {
    "dist": "build",
    "eslint": "eslint .",
    "pack": "build --dir",
    "postinstall": "install-app-deps",
    "release": "build",
    "start": "electron ./app --profile=development --no-auto-updater --developer-tools",
    "test": "mocha",
    "svg2png": "svg2png"
  },
  "build": {
    "appId": "com.electron.soundcleod",
    "extraResources": [
      "dsa_pub.pem",
      "Credits.rtf"
    ],
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 345,
          "y": 153,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 95,
          "y": 153,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://soundcleod.com/favicon.ico"
    }
  },
  "devDependencies": {
    "electron": "^1.7.11",
    "electron-builder": "^19.55.2",
    "electron-builder-squirrel-windows": "^19.55.2",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.0.0",
    "spectron": "^3.8.0",
    "svg2png": "^4.1.1",
    "tmp": "0.0.33",
    "to-ico-cli": "^1.0.0"
  }
}
