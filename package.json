{
  "private": true,
  "scripts": {
    "dist": "build",
    "eslint": "eslint .",
    "pack": "build --dir",
    "postinstall": "install-app-deps",
    "release": "build",
    "start": "electron ./app --profile=development --no-auto-updater --developer-tools",
    "test": "mocha",
    "svg2png": "svg2png"
  },
  "build": {
    "appId": "com.electron.soundcleod",
    "extraResources": [
      "dsa_pub.pem",
      "Credits.rtf"
    ],
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 345,
          "y": 153,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 95,
          "y": 153,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://soundcleod.com/favicon.ico"
    }
  },
  "devDependencies": {
    "electron": "1.7.8",
    "electron-builder": "19.37.2",
    "electron-builder-squirrel-windows": "19.38.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.1.2",
    "spectron": "^3.4.0",
    "svg2png": "^4.1.1",
    "tmp": "0.0.31",
    "to-ico-cli": "^1.0.0"
  }
}
